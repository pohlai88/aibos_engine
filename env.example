# AIBOS Engine Environment Configuration

# =============================================================================
# CORE ENGINE CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_PORT=3001
CORE_ENGINE_PORT=3002

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://aibos_user:aibos_password@localhost:5432/aibos_engine
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=aibos_engine
DATABASE_USER=aibos_user
DATABASE_PASSWORD=aibos_password
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ISSUER=aibos-engine
JWT_AUDIENCE=aibos-users
JWT_ACCESS_TOKEN_EXPIRATION=15
JWT_REFRESH_TOKEN_EXPIRATION=7

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_NAME=aibos-session
SESSION_TIMEOUT=30
SESSION_CLEANUP_INTERVAL=15

# Password Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_MAX_AGE=90
PASSWORD_HISTORY_COUNT=5

# MFA Configuration
MFA_ENABLED=true
MFA_REQUIREMENT=optional
MFA_METHODS=totp,sms,email
MFA_BACKUP_CODES_COUNT=10

# =============================================================================
# BILLING CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# =============================================================================
# EVENT BUS CONFIGURATION
# =============================================================================
EVENT_BUS_TYPE=nats
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=aibos-cluster
NATS_CLIENT_ID=aibos-engine

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_VERSION=v1
API_DEFAULT_VERSION=v1
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100
API_RATE_LIMIT_REQUESTS_PER_HOUR=1000
API_RATE_LIMIT_REQUESTS_PER_DAY=10000

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true

# =============================================================================
# MODULE SYSTEM CONFIGURATION
# =============================================================================
MODULE_STORE_URL=http://localhost:3003
MODULE_VALIDATION_ENABLED=true
MODULE_SANDBOX_ENABLED=true
MODULE_SANDBOX_TYPE=webassembly
MODULE_RESOURCE_LIMITS_CPU=1.0
MODULE_RESOURCE_LIMITS_MEMORY=512Mi

# =============================================================================
# OBSERVABILITY CONFIGURATION
# =============================================================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3004
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Loki
LOKI_ENABLED=true
LOKI_URL=http://localhost:3100

# Tempo
TEMPO_ENABLED=true
TEMPO_URL=http://localhost:3200

# OpenTelemetry
OTEL_ENABLED=true
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=aibos-engine

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# IP Whitelist/Blacklist
IP_WHITELIST=
IP_BLACKLIST=

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./storage
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@aibos-engine.com
SMTP_FROM_NAME=AIBOS Engine

# =============================================================================
# SMS CONFIGURATION
# =============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# PUSH NOTIFICATION CONFIGURATION
# =============================================================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG_ENABLED=true
DEBUG_PORT=9229
HOT_RELOAD_ENABLED=true
LOG_LEVEL=debug
LOG_FORMAT=json

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production
# NODE_ENV=production
# LOG_LEVEL=info
# DEBUG_ENABLED=false
# HOT_RELOAD_ENABLED=false 